# Backend Environment Configuration
NODE_ENV=development
PORT=3001

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Google Drive API Configuration
# Get these from Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3001/api/google-drive/auth-callback

# Service Account for Google Drive (optional, for server-to-server)
# Generate and download service account JSON from Google Cloud Console
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project"}

# YouTube Data API (optional, for enhanced features)
YOUTUBE_API_KEY=your_youtube_api_key_here

# File Storage Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=uploads

# Audio Processing Configuration
FFMPEG_PATH=/usr/local/bin/ffmpeg
MAX_PROCESSING_TIME=300000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your_jwt_secret_here_for_future_use

# Logging
LOG_LEVEL=info